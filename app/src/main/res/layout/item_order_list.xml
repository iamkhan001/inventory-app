<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_m"
    app:cardElevation="@dimen/space_m"
    android:layout_margin="@dimen/space_m"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvPoAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_m"
            android:textSize="@dimen/text_m"
            android:textColor="@color/black"
            android:text="Po S012321 on 24/04/2021 for Linking\n Road Store was send to Central Kitchen \n Mumbai for INR 25,421/- "
            app:layout_constraintEnd_toStartOf="@+id/btnRecAndCan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:gravity="center"
            android:padding="@dimen/space_ss"
            android:id="@+id/btnRecAndCan"
            android:layout_width="100dp"
            android:layout_height="@dimen/size_s"
            android:layout_margin="@dimen/space_m"
            android:background="@drawable/bg_button_green_r_4"
            android:text="Received"
            android:textSize="@dimen/text_sm"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCreaterName"
            android:layout_width="0dp"
            android:textSize="@dimen/text_s"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_m"
            android:text="Created By :Prashant desai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvDateAndTime"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDateAndTime"
            android:textSize="@dimen/text_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_m"
            android:text="Sat,Apr 24 2021 12:30 PM"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>